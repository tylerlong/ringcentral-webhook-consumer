{
  "name": "ringcentral-webhook-consumer",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "description": "Out-of-box consumer for RingCentral WebHook, mainly for testing and troubleshooting purpose.",
  "main": "build/electron.bundle.js",
  "scripts": {
    "upgrade": "yarn-upgrade-all && yarn remove extract-text-webpack-plugin && yarn add --dev extract-text-webpack-plugin@next",
    "build": "webpack --progress --colors",
    "build:watch": "yarn build --watch",
    "release": "yarn build -p",
    "start": "electron .",
    "dist": "yarn build && rm -rf dist && electron-builder build --mac --win --linux --publish always",
    "dist:dev": "rm -rf dist && electron-builder build --mac --win --linux",
    "download": "node -r @babel/register build/downloader.js"
  },
  "repository": "git@github.com:tylerlong/ringcentral-webhook-consumer.git",
  "author": {
    "name": "Tyler Liu",
    "email": "tyler.liu@ringcentral.com"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "detect-port": "^1.3.0",
    "electron-log": "^4.0.7",
    "electron-updater": "^4.2.2",
    "express": "^4.17.1",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "standard": "^14.3.1",
    "style-loader": "^1.1.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "yarn-upgrade-all": "^0.5.2"
  },
  "build": {
    "appId": "ringcentral-webhook-consumer.ringcentral.com",
    "productName": "RingCentral WebHook Consumer",
    "files": [
      "build/index.html",
      "build/electron.bundle.js",
      "build/preload.bundle.js",
      "build/index.bundle.js",
      "build/index.bundle.css",
      "!node_modules${/*}"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "files": [
        "build/darwin/ngrok"
      ]
    },
    "win": {
      "files": [
        "build/win32/ngrok.exe"
      ]
    },
    "linux": {
      "files": [
        "build/linux/ngrok"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 128,
          "y": 160
        },
        {
          "x": 384,
          "y": 160,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "asarUnpack": [
      "build/darwin/ngrok",
      "build/win32/ngrok.exe",
      "build/linux/ngrok"
    ],
    "compression": "maximum"
  }
}
